@using Microsoft.AspNetCore.Identity
@using ModelsLayer.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item ">
                    @*<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
                    <a asp-controller="MyProfile" asp-action="Index" class="nav-link waves-effect waves-light">
                        <i class="fas fa-user"></i> @UserManager.GetUserName(User)
                    </a>
                </li>
                <li class="nav-item ">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link nav-link waves-effect waves-light logoutButton">Logout</button>
                </li>
            </ul>
        </form>
}
else
{

    <li class="nav-item">
        <a class="nav-link waves-effect waves-light" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link waves-effect waves-light" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    </li>
}



